<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/p_single_title"
        layout="@layout/layout_p_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/zao"
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:text="早餐"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:background="@drawable/zao"
                />
            <TextView
                android:id="@+id/tv_wu"
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:text="午餐"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/color_333333"
                android:background="@drawable/zhong"
                />
            <TextView
                android:id="@+id/tv_zao"
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:text="晚餐"
                android:textSize="40sp"
                android:textColor="@color/color_333333"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/wan"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选"
                        android:textColor="@color/color_999999"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_sel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="3份套餐"
                        android:textColor="@color/color_333333"
                        android:textSize="31sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共计"
                        android:textColor="@color/color_999999"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="¥12.00"
                        android:textColor="@color/color_333333"
                        android:textSize="31sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_setting"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg_gray_key"
                        android:text="取消选择"
                        android:textColor="@color/color_333333"
                        android:textSize="36sp" />

                    <Button
                        android:id="@+id/btn_unbind"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg_login"
                        android:text="提交订单"
                        android:textColor="@color/white"
                        android:textSize="36sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>